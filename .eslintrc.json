{
    "env": {
        "browser": true,
        "es2015": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
	],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
	],
	"overrides": [{
		"files": "*.ts"
	}],
    "rules": {
		"indent": ["error", "tab"],
		"no-tabs": 0,
		"react/prop-types": 0,
		"camelcase": "warn"
	}
}
